{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "changelog": {
      "type": "object",
      "properties": {
        "scopes": {
          "type": "object",
          "patternProperties": {
            ".*": {
              "type": "object",
              "properties": {
                "displayName": {
                  "type": [
                    "string",
                    "null"
                  ],
                  "title": "Scope Display Name"
                }
              }
            }
          }
        },
        "tagPatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "^(?<version>\\d+\\.\\d+(\\.\\d+)?.*)",
            "^v(?<version>\\d+\\.\\d+(\\.\\d+)?.*)"
          ],
          "uniqueItems": true,
          "title": "Tag Patterns"
        },
        "outputPath": {
          "type": "string",
          "default": "changelog.md",
          "title": "Output Path"
        },
        "footers": {
          "type": "object",
          "patternProperties": {
            ".*": {
              "type": "object",
              "properties": {
                "displayName": {
                  "type": [
                    "string",
                    "null"
                  ],
                  "title": "Footer Display Name"
                }
              }
            }
          },
          "properties": {
            "closes": {
              "type": "object",
              "properties": {
                "displayName": {
                  "type": [
                    "string",
                    "null"
                  ],
                  "title": "Footer Display Name"
                }
              },
              "default": {
                "displayName": "Closes"
              }
            },
            "co-authored-by": {
              "type": "object",
              "properties": {
                "displayName": {
                  "type": [
                    "string",
                    "null"
                  ],
                  "title": "Footer Display Name"
                }
              },
              "default": {
                "displayName": "Co-authored by"
              }
            },
            "fixes": {
              "type": "object",
              "properties": {
                "displayName": {
                  "type": [
                    "string",
                    "null"
                  ],
                  "title": "Footer Display Name"
                }
              },
              "default": {
                "displayName": "Fixes"
              }
            },
            "merge-request": {
              "type": "object",
              "properties": {
                "displayName": {
                  "type": [
                    "string",
                    "null"
                  ],
                  "title": "Footer Display Name"
                }
              },
              "default": {
                "displayName": "Merge Request"
              }
            },
            "pull-request": {
              "type": "object",
              "properties": {
                "displayName": {
                  "type": [
                    "string",
                    "null"
                  ],
                  "title": "Footer Display Name"
                }
              },
              "default": {
                "displayName": "Pull Request"
              }
            },
            "reviewed-by": {
              "type": "object",
              "properties": {
                "displayName": {
                  "type": [
                    "string",
                    "null"
                  ],
                  "title": "Footer Display Name"
                }
              },
              "default": {
                "displayName": "Reviewed by"
              }
            },
            "see-also": {
              "type": "object",
              "properties": {
                "displayName": {
                  "type": [
                    "string",
                    "null"
                  ],
                  "title": "Footer Display Name"
                }
              },
              "default": {
                "displayName": "See Also"
              }
            }
          }
        },
        "integrations": {
          "type": "object",
          "properties": {
            "provider": {
              "type": "string",
              "enum": [
                "None",
                "GitHub",
                "GitLab"
              ],
              "default": "None",
              "title": "Integration Provider"
            },
            "github": {
              "type": "object",
              "properties": {
                "accessToken": {
                  "type": [
                    "string",
                    "null"
                  ],
                  "default": null,
                  "title": "GitHub Access Token"
                },
                "remoteName": {
                  "type": [
                    "string",
                    "null"
                  ],
                  "default": "origin",
                  "title": "GitHub Remote Name"
                },
                "host": {
                  "type": [
                    "string",
                    "null"
                  ],
                  "default": null,
                  "title": "GitHub Host"
                },
                "owner": {
                  "type": [
                    "string",
                    "null"
                  ],
                  "default": null,
                  "title": "GitHub Repository Owner"
                },
                "repository": {
                  "type": [
                    "string",
                    "null"
                  ],
                  "default": null,
                  "title": "GitHub Repository Name"
                }
              }
            },
            "gitlab": {
              "type": "object",
              "properties": {
                "accessToken": {
                  "type": [
                    "string",
                    "null"
                  ],
                  "default": null,
                  "title": "GitLab Access Token"
                },
                "remoteName": {
                  "type": [
                    "string",
                    "null"
                  ],
                  "default": "origin",
                  "title": "GitLab Remote Name"
                },
                "host": {
                  "type": [
                    "string",
                    "null"
                  ],
                  "default": null,
                  "title": "GitLab Host"
                },
                "namespace": {
                  "type": [
                    "string",
                    "null"
                  ],
                  "default": null,
                  "title": "GitLab Namespace"
                },
                "project": {
                  "type": [
                    "string",
                    "null"
                  ],
                  "default": null,
                  "title": "GitLab Project Name"
                }
              }
            }
          }
        },
        "versionRange": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "title": "Version Range"
        },
        "currentVersion": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "title": "Current Version"
        },
        "template": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "enum": [
                "Default",
                "GitLabRelease",
                "GitHubRelease",
                "Html"
              ],
              "default": "Default",
              "title": "Template Name"
            },
            "default": {
              "type": "object",
              "properties": {
                "normalizeReferences": {
                  "type": "boolean",
                  "default": true
                },
                "customDirectory": {
                  "type": [
                    "string",
                    "null"
                  ],
                  "default": null,
                  "title": "Template Custom Directory"
                }
              }
            },
            "gitHubRelease": {
              "type": "object",
              "properties": {
                "normalizeReferences": {
                  "type": "boolean",
                  "default": true
                },
                "customDirectory": {
                  "type": [
                    "string",
                    "null"
                  ],
                  "default": null,
                  "title": "Template Custom Directory"
                }
              }
            },
            "gitLabRelease": {
              "type": "object",
              "properties": {
                "normalizeReferences": {
                  "type": "boolean",
                  "default": true
                },
                "customDirectory": {
                  "type": [
                    "string",
                    "null"
                  ],
                  "default": null,
                  "title": "Template Custom Directory"
                }
              }
            },
            "html": {
              "type": "object",
              "properties": {
                "normalizeReferences": {
                  "type": "boolean",
                  "default": true
                },
                "customDirectory": {
                  "type": [
                    "string",
                    "null"
                  ],
                  "default": null,
                  "title": "Template Custom Directory"
                }
              }
            }
          }
        },
        "entryTypes": {
          "type": "object",
          "patternProperties": {
            ".*": {
              "type": "object",
              "properties": {
                "displayName": {
                  "type": [
                    "string",
                    "null"
                  ],
                  "title": "Entry Type Display Name"
                },
                "priority": {
                  "type": "integer",
                  "title": "Entry Type Priority"
                }
              }
            }
          },
          "properties": {
            "build": {
              "type": "object",
              "properties": {
                "displayName": {
                  "type": [
                    "string",
                    "null"
                  ],
                  "title": "Entry Type Display Name"
                },
                "priority": {
                  "type": "integer",
                  "title": "Entry Type Priority"
                }
              },
              "default": {
                "displayName": "Build System and Dependency Changes",
                "priority": 40
              }
            },
            "chore": {
              "type": "object",
              "properties": {
                "displayName": {
                  "type": [
                    "string",
                    "null"
                  ],
                  "title": "Entry Type Display Name"
                },
                "priority": {
                  "type": "integer",
                  "title": "Entry Type Priority"
                }
              },
              "default": {
                "displayName": "Chores",
                "priority": 10
              }
            },
            "ci": {
              "type": "object",
              "properties": {
                "displayName": {
                  "type": [
                    "string",
                    "null"
                  ],
                  "title": "Entry Type Display Name"
                },
                "priority": {
                  "type": "integer",
                  "title": "Entry Type Priority"
                }
              },
              "default": {
                "displayName": "Continuous Integration System Changes",
                "priority": 30
              }
            },
            "docs": {
              "type": "object",
              "properties": {
                "displayName": {
                  "type": [
                    "string",
                    "null"
                  ],
                  "title": "Entry Type Display Name"
                },
                "priority": {
                  "type": "integer",
                  "title": "Entry Type Priority"
                }
              },
              "default": {
                "displayName": "Documentation Changes",
                "priority": 70
              }
            },
            "feat": {
              "type": "object",
              "properties": {
                "displayName": {
                  "type": [
                    "string",
                    "null"
                  ],
                  "title": "Entry Type Display Name"
                },
                "priority": {
                  "type": "integer",
                  "title": "Entry Type Priority"
                }
              },
              "default": {
                "displayName": "New Features",
                "priority": 100
              }
            },
            "fix": {
              "type": "object",
              "properties": {
                "displayName": {
                  "type": [
                    "string",
                    "null"
                  ],
                  "title": "Entry Type Display Name"
                },
                "priority": {
                  "type": "integer",
                  "title": "Entry Type Priority"
                }
              },
              "default": {
                "displayName": "Bug Fixes",
                "priority": 90
              }
            },
            "perf": {
              "type": "object",
              "properties": {
                "displayName": {
                  "type": [
                    "string",
                    "null"
                  ],
                  "title": "Entry Type Display Name"
                },
                "priority": {
                  "type": "integer",
                  "title": "Entry Type Priority"
                }
              },
              "default": {
                "displayName": "Performance Improvements",
                "priority": 80
              }
            },
            "refactor": {
              "type": "object",
              "properties": {
                "displayName": {
                  "type": [
                    "string",
                    "null"
                  ],
                  "title": "Entry Type Display Name"
                },
                "priority": {
                  "type": "integer",
                  "title": "Entry Type Priority"
                }
              },
              "default": {
                "displayName": "Code Refactorings",
                "priority": 60
              }
            },
            "style": {
              "type": "object",
              "properties": {
                "displayName": {
                  "type": [
                    "string",
                    "null"
                  ],
                  "title": "Entry Type Display Name"
                },
                "priority": {
                  "type": "integer",
                  "title": "Entry Type Priority"
                }
              },
              "default": {
                "displayName": "Style Changes",
                "priority": 20
              }
            },
            "test": {
              "type": "object",
              "properties": {
                "displayName": {
                  "type": [
                    "string",
                    "null"
                  ],
                  "title": "Entry Type Display Name"
                },
                "priority": {
                  "type": "integer",
                  "title": "Entry Type Priority"
                }
              },
              "default": {
                "displayName": "Test Changes",
                "priority": 50
              }
            }
          }
        },
        "parser": {
          "type": "object",
          "properties": {
            "mode": {
              "type": "string",
              "enum": [
                "Strict",
                "Loose"
              ],
              "default": "Loose",
              "title": "Parser Mode"
            },
            "messageOverrides": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean",
                  "default": true
                },
                "gitNotesNamespace": {
                  "type": "string",
                  "default": "changelog/message-override",
                  "title": "Message Overide Git Notes Namespace"
                }
              }
            }
          }
        },
        "filter": {
          "type": "object",
          "properties": {
            "include": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "title": "Filter Type Expression"
                  },
                  "scope": {
                    "type": "string",
                    "title": "Filter Scope Expression"
                  }
                }
              },
              "title": "Filter Include Expressions"
            },
            "exclude": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "title": "Filter Type Expression"
                  },
                  "scope": {
                    "type": "string",
                    "title": "Filter Scope Expression"
                  }
                }
              },
              "title": "Filter Exclude Expressions"
            }
          },
          "default": {
            "include": [
              {
                "type": "feat",
                "scope": "*"
              },
              {
                "type": "fix",
                "scope": "*"
              }
            ],
            "exclude": []
          },
          "title": "Filter"
        }
      }
    }
  }
}