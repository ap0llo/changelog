<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFrameworks>netcoreapp2.1;netcoreapp3.1</TargetFrameworks>
    <RootNamespace>Grynwald.ChangeLog</RootNamespace>
    <PackageId>Grynwald.ChangeLog</PackageId>
    <AssemblyName>changelog</AssemblyName>
    <PackAsTool>true</PackAsTool>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Configuration\defaultSettings.json" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Configuration\defaultSettings.json" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="FluentValidation" Version="8.6.2" />
    <PackageReference Include="Grynwald.Utilities" Version="1.5.50-pre" />
    <PackageReference Include="Grynwald.Utilities.Configuration" Version="1.5.50-pre" />
    <PackageReference Include="Grynwald.MarkdownGenerator" Version="2.5.13-pre" />
    <PackageReference Include="LibGit2Sharp" Version="0.27.0-preview-0034" />
    <PackageReference Include="CommandLineParser" Version="2.7.82" />
    <PackageReference Include="Microsoft.Extensions.Configuration" Version="3.1.2" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="3.1.2" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="3.1.2" />
    <PackageReference Include="Microsoft.Extensions.Configuration.EnvironmentVariables" Version="3.1.2" />
    <PackageReference Include="Microsoft.Extensions.Logging" Version="3.1.2" />
    <PackageReference Include="NuGet.Versioning" Version="5.5.0-preview.2.6382" />
    <PackageReference Include="Octokit" Version="0.43.0" />
    <PackageReference Include="Autofac" Version="5.1.2" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\deps\GitLabApiClient\src\GitLabApiClient\GitLabApiClient.csproj" />
  </ItemGroup>

  <!-- Auto-Generated command line help -->
  <ItemGroup>
    <PackageReference Include="Grynwald.MdDocs.MSBuild" Version="0.3.84" PrivateAssets="all" />
  </ItemGroup>
  <PropertyGroup>
    <CommandLineDocumentationOutputPath>$(MSBuildThisFileDirectory)..\..\docs\commandline-reference\</CommandLineDocumentationOutputPath>
    <!-- Generate dodccs only for netcoreapp3.1, otherwise there would be race-conditions between the buidls for the different target frameworks-->
    <GenerateCommandLineDocumentationOnBuild Condition=" '$(TargetFramework)' == 'netcoreapp3.1' ">true</GenerateCommandLineDocumentationOnBuild>
  </PropertyGroup>
  

</Project>
